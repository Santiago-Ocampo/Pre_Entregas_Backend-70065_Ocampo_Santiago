<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<title>Detalles De Productos</title>

<div class="card mt-3">
    <div class="card-body">
        <h1>{{product.title}}</h1>
        <img src="{{product.thumbnail}}" alt="{{product.title}}" style="width: 200px;">
        <p>{{product.description}}</p>
        <p><strong>Precio:</strong> ${{product.price}}</p>
        <p><strong>CÃ³digo:</strong> {{product.code}}</p>
        <p><strong>Stock:</strong> {{product.stock}}</p>
    </div>

    <form action="/api/products/{{product._id}}/add-to-cart" method="POST">
        <label for="quantity">Cantidad:</label>
        <input type="number" name="quantity" id="quantity" value="1" min="1">
        <button type="submit">Agregar al Carrito</button>
    </form>

    <a href="/">Volver a la tienda</a>

</div>

<script>
    async function addToCart(productId) {
        const response = await fetch(`/api/carts/add/${productId}`, { method: 'POST' });
        const result = await response.json();
        alert(result.message || 'Producto agregado al carrito');
    }
</script>
<h1>Carrito de Compras</h1>


<div class="card mt-3">
    {{#if cart.products.length}}
    <ul>
        {{#each cart.products}}
        <li>
            <img src="{{this.product.thumbnail}}" alt="{{this.product.title}}" style="width: 100px;">
            <p>{{this.product.title}} - ${{this.product.price}}</p>
            <p>Cantidad: {{this.quantity}}</p>
            <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">Eliminar del Carrito</button>
            </form>
        </li>
        {{/each}}
    </ul>
    <form action="/api/carts/{{cart._id}}" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Vaciar Carrito</button>
    </form>
    {{else}}
    <p>Tu carrito está vacío.</p>
    {{/if}}
    <a href="/">Seguir comprando</a>
</div>